@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - DriveNow</title>
    <link rel="stylesheet" href="styles.css">
    <script>
        function showSuccessMessage() {
            document.getElementById("loginContainer").style.display = "none";
            document.getElementById("successContainer").style.display = "flex";
        }
    </script>
</head>
<body>

    <div class="profile-wrapper">
        <!-- Formularul de autentificare -->
        <div class="login-container" id="loginContainer">
            <h2>Autentificare</h2>
            <form action="dashboard.html" method="post">
                <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="input-group">
                    <label for="password">Parola:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button type="button" class="button" onclick="showSuccessMessage()">Login</button>
            </form>
            <p>Nu ai cont? <a href="Register">Înregistrează-te</a></p>
        </div>

        <!-- Mesajul de succes -->
        <div class="success-container">
            <span class="success-message">Autentificare reușită!</span>
            <span class="success-text">Bun venit! Acum poți accesa toate funcționalitățile platformei.</span>
            <button class="success-button" onclick="window.location.href='index'">Mergi la pagina principală</button>
        </div>

    </div>

</body>
</html>
