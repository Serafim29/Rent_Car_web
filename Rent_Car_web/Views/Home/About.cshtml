
@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asigură-te că ai un layout aplicat
}

<div class="about-container">
    <div class="header-section">
        <h2>Despre Noi</h2>
        <p>Oferim cele mai bune servicii de închirieri auto, garantând siguranță și confort.</p>
    </div>

    <div class="mission-section">
        <h3>Misiunea Noastră</h3>
        <p>Scopul nostru este să oferim o experiență de închiriere auto rapidă și accesibilă pentru toți clienții.</p>
    </div>

    <div class="team-section">
        <h3>Echipa Noastră</h3>
        <div class="team-members">
            <div class="member">
                <img src="~/images/team1.jpg" alt="Echipa">
                <p><strong>Andrei Popescu</strong> - CEO</p>
            </div>
            <div class="member">
                <img src="~/images/team2.jpg" alt="Echipa">
                <p><strong>Maria Ionescu</strong> - Manager Relații Clienți</p>
            </div>
        </div>
    </div>

    <a href="@Url.Action("Index", "Home")" class="back-button">Înapoi la Home</a>
</div>

<style>
    .about-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .header-section h2 {
        color: #007bff;
    }

    .mission-section, .team-section, .contact-section {
        margin-top: 20px;
    }

    .team-members {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .member img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }

    .back-button {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 15px;
        background: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }

        .back-button:hover {
            background: #0056b3;
        }
</style>
