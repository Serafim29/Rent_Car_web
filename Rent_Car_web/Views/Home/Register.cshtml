@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Înregistrare - DriveNow</title>
    <link rel="stylesheet" href="style.css">
    <script>
        function showSuccessMessage() {
            document.getElementById("registrationContainer").style.display = "none";
            document.getElementById("successContainer").style.display = "flex";
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="registration-container" id="registrationContainer">
            <h2>Înregistrare DriveNow</h2>
            <form onsubmit="event.preventDefault(); showSuccessMessage();">
                <div class="input-group">
                    <label for="nume">Nume și Prenume:</label>
                    <input type="text" id="nume" name="nume" required>
                </div>
                <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="input-group">
                    <label for="telefon">Număr de Telefon:</label>
                    <input type="tel" id="telefon" name="telefon" required>
                </div>
                <div class="input-group">
                    <label for="permis">Număr Permis de Conducere:</label>
                    <input type="text" id="permis" name="permis" required>
                </div>
                <div class="input-group">
                    <label for="password">Parolă:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="input-group">
                    <label for="confirm-password">Confirmă Parola:</label>
                    <input type="password" id="confirm-password" name="confirm-password" required>
                </div>

                <p class="terms-text">
                    Prin înregistrare, confirm că am citit și sunt de acord cu
                    <a href="#">Termenii și Condițiile</a> și
                    <a href="#">Politica de Confidențialitate</a>
                </p>

                <button type="submit" class="button">Creează Cont</button>
            </form>
            <p>Ai deja cont? <a href="login" class="login-link">Autentifică-te</a></p>
        </div>

        <div class="success-container" id="successContainer">
            <div class="success-message-box">
                <span class="success-message">Înregistrare reușită!</span>
                <span class="success-text">
                    Contul tău a fost creat cu succes. Poți începe să închiriezi mașini!
                </span>
                <button class="button" onclick="window.location.href='index'">
                    Mergi la pagina principală
                </button>
            </div>
        </div>
    </div>
</body>
</html>
